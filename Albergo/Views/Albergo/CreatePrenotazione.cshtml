                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-6">
                                @Html.LabelFor(model => model.Cliente.CodiceFiscale, htmlAttributes: new { @class = "control-label mt-2" })
                                @Html.EditorFor(model => model.Cliente.CodiceFiscale, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Cliente.CodiceFiscale, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-6">
                                @Html.LabelFor(model => model.Cliente.Città, htmlAttributes: new { @class = "control-label mt-2" })
                                @Html.EditorFor(model => model.Cliente.Città, new { htmlAttributes = new { @class = "form-control" } })
