@model IEnumerable<Albergo.Models.Servizio>

@{
    ViewBag.Title = "ViewServizi";
}

<div class="divBackground">
    <div class="container ">
        <h2 class="ActionLink py-3">Lista dei servizi</h2>
        <p>
            @Html.ActionLink("Crea nuovo servizio ", "CreateServizio", new { area = "" }, new { @class = "btn bottone" })
        </p>
        <div class="borderTabella TabellaHome">
            <table class="table table-striped">
                <tr>
                    <th class="text-white">
                        @Html.DisplayNameFor(model => model.NomeServizio)
                    </th>
                    <th class="text-white">
                        @Html.DisplayNameFor(model => model.Prezzo)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    if (item.Cancellato == false)
                    {
                        <tr>
                            <td class="text-white">
                                @Html.DisplayFor(modelItem => item.NomeServizio)
                            </td>
                            <td class="text-white">
                                @Html.DisplayFor(modelItem => item.Prezzo) &euro;
                            </td>
                            <td>
                                <a class="btn btn-warning" href="/Albergo/EditServizio/@item.IdServizio"><i class="fa-solid fa-edit"></i></a>
                                <a class="btn btn-danger" href="/Albergo/DeleteServizio/@item.IdServizio"><i class="fa-solid fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                }
            </table>
        </div>
    </div>
</div>