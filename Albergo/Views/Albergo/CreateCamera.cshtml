@model Albergo.Models.Camera

@{
    ViewBag.Title = "CreateCamera";
}

<div class="divBackground">
    <div class="container ">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()


            <center class="Center3">
                <div class="card CardGenerica p-3 text-white">
                    <div class="form-horizontal">
                        <h2><a class="btn bottone text-white me-3" href="/Albergo/ViewCamere"><i class="fa-solid fa-hand-point-left"></i></a>Crea Camera</h2>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.CodiceCamera, htmlAttributes: new { @class = "control-label" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.CodiceCamera, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.CodiceCamera, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Descrizione, htmlAttributes: new { @class = "control-label mt-3 " })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Descrizione, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Descrizione, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Tipologia, htmlAttributes: new { @class = "control-label mt-3" })
                            <div class="col-md-10">
                                @Html.DropDownListFor(model => model.Tipologia, new SelectList(ViewBag.ListaTipologiaCamera, "Value", "Text"), htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Tipologia, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Piano, htmlAttributes: new { @class = "control-label mt-3" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Piano, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Piano, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Crea Camera" class="btn bottone text-white my-3" />
                            </div>
                        </div>
                    </div>
                    </div>
            </center>
        }

    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
