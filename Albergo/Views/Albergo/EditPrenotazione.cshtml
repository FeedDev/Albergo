@model Albergo.Models.Prenotazione

@{
    ViewBag.Title = "EditPrenotazione";
}

<div class="divBackground">
    <div class="container ">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <center class="Center3">
                <div class="card CardGenerica p-3">

                    <div class="form-horizontal text-white">
                        <h2><a class="btn bottone text-white me-3" href="/Albergo/ListaPrenotazioni"><i class="fa-solid fa-hand-point-left"></i></a>Prenotazione</h2>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.IdPrenotazione)
                        @Html.HiddenFor(model => model.IdClienteFk)
                        @Html.HiddenFor(model => model.DataPrenotazione)
                        @Html.HiddenFor(model => model.InizioSoggiorno)
                        @Html.HiddenFor(model => model.FineSoggiorno)

                        <div class="form-group">
                            @Html.LabelFor(model => model.Anno, htmlAttributes: new { @class = "control-label my-2 " })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Anno, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Anno, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Caparra, htmlAttributes: new { @class = "control-label my-2 " })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Caparra, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Caparra, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Tariffa, htmlAttributes: new { @class = "control-label my-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Tariffa, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Tariffa, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.IdTipologiaFk, "Tipologia", htmlAttributes: new { @class = "control-label my-2" })
                            <div class="col-md-10">
                                @Html.DropDownList("IdTipologiaFk", new SelectList(ViewBag.ListaTipologia, "Value", "Text"), htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.IdTipologiaFk, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.IdCameraFk, "Camera", htmlAttributes: new { @class = "control-label my-2" })
                            <div class="col-md-10">
                                @Html.DropDownList("IdCameraFk", new SelectList(ViewBag.ListaCamere, "Value", "Text"), htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.IdCameraFk, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Modifica" class="btn bottone text-white my-3" />
                            </div>
                        </div>
                    </div>
                </div>
            </center>
         }
    </div>
</div>


            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
